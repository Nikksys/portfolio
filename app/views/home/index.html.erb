    setTimeout(function(){
      navLinks[index].style.cssText = "filter: grayscale(0%) opacity(1); background: var(--bg-secondary); color: var(--text-secondary);"
      linksText[index - 1].style.cssText = "display: inline; min-width: 75px;"
      document.querySelector(".s-navbar").style.width = "13rem"
      document.querySelector(".s-navbar .logo svg").style.cssText = "margin-left: 160px; transform: rotate(720deg); position: relative; top: -20px; width: 2.7rem;"
      document.querySelector("#logotypo-nixsys").style.left = "20px"
    }, time)
  }
  
  function timeLinksOut(index, time){
